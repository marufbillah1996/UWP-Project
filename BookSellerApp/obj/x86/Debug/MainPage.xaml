<Page
    x:Class="BookSellerApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookSellerApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Margin="0,50,0,50">
        <TextBlock Text="Online Book Shop" TextAlignment="Center" FontWeight="Black" FontSize="30" Padding="5 5 5 15"  />
        <ListView x:ConnectionId='2' x:Name="listDevices" SelectionMode="Single" Height="570"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                                                                            >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" >
                    <Setter Property="HorizontalContentAlignment"  Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate >

                <DataTemplate>
                    <StackPanel Orientation="Vertical" 
                        Margin="2"
                        BorderBrush="LightGreen"
                        BorderThickness="2,2,2,2"
                        Padding="5,5,5,5" >

                        <Image Width="200" Source="{Binding Image}" Margin="10,10,20,10" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Vertical">
                            <TextBlock
                                Text="{Binding Name}"
                                Margin="5 5 255 5"
                                FontWeight="Bold"
                                FontSize="20"
                                />
                            <TextBlock
                                Text="{Binding Writter}"
                                Margin="5"
                                
                                FontSize="12"
                                />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="Developed by MD.MARUF BILLAH" FontStyle="Oblique" FontWeight="SemiLight" />
        <TextBlock Text="ID-1268006" FontWeight="SemiBold" />
    </StackPanel>
</Page>

